            tools:layout_editor_absoluteY="138dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="40dp"
            android:text="Encuentros"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="147dp"
            tools:layout_editor_absoluteY="212dp" />

        <Button
            android:id="@+id/btnRutinas"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.01"
            android:background="@mipmap/rutinas"
            tools:layout_editor_absoluteX="148dp"
            tools:layout_editor_absoluteY="261dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:text="Rutinas"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="162dp"
            tools:layout_editor_absoluteY="325dp" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/btnBattle"
            android:layout_width="74dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="0.10"
            android:clickable="true"
            app:fabSize="mini"
            app:srcCompat="@mipmap/battle" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="20dp"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:weightSum="1">

        <Button
            android:id="@+id/btnSaludos"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:background="@mipmap/saludos"
            tools:layout_editor_absoluteX="280dp"
            tools:layout_editor_absoluteY="142dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="50dp"
            android:text="Saludos"
